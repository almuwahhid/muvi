<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".app.home.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            android:scaleY="1.5"
            android:scaleX="1.5"
            app:lottie_fileName="night.json"
            app:lottie_loop="true" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sample_async"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <include
                android:id="@+id/appbar"
                layout="@layout/toolbar_base"/>
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/dimen_0dp"
                app:cardCornerRadius="@dimen/dimen_24dp"
                android:layout_marginBottom="-24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:background="@drawable/bg_white"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/poster"
                        app:cardCornerRadius="@dimen/radius_default"
                        android:layout_margin="@dimen/margin_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.recyclerview.widget.RecyclerView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:id="@+id/rv_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:itemCount="5"
                                tools:listitem="@layout/adapter_carousel" />
                            <me.relex.circleindicator.CircleIndicator2

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:ci_drawable_unselected="@drawable/ic_indicator_inactive"
                                app:ci_drawable="@drawable/ic_indicator_active"
                                android:id="@+id/indicator"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_24dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <HorizontalScrollView
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/groups"
                            app:singleSelection="true"
                            style="@style/Text.Normal.OneRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.chip.ChipGroup>
                    </HorizontalScrollView>
                    <LinearLayout
                        android:layout_margin="@dimen/margin_default"
                        android:padding="@dimen/dimen_4dp"
                        android:background="@drawable/bg_rounded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.tabs.TabLayout
                            app:tabTextColor="@color/white"
                            android:id="@+id/tablayout"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@null"
                            android:background="@color/transparent"
                            app:tabIndicatorGravity="stretch"
                            app:tabIndicatorColor="@color/colorPrimary"
                            app:tabIndicator="@drawable/indicator_bg" >
                        </com.google.android.material.tabs.TabLayout>
                    </LinearLayout>
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</layout>
