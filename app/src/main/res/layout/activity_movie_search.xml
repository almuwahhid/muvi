<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-12dp"
            app:cardCornerRadius="@dimen/radius_small"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    app:layout_constraintBottom_toBottomOf="@id/header_title"
                    app:lottie_autoPlay="true"
                    android:scaleY="3"
                    android:scaleX="5"
                    app:lottie_fileName="night.json"
                    app:lottie_loop="true" />
                <LinearLayout
                    android:id="@+id/header_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/radius_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:id="@+id/appbar"
                        layout="@layout/toolbar_base"/>
                    <com.almuwahhid.themoviedb.resources.widget.EditTextSearch
                        style="@style/EditText.Form"
                        android:id="@+id/edt_search"
                        android:hint="Cari Movie"
                        android:layout_margin="@dimen/margin_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/helper"
                layout="@layout/helper"/>

            <androidx.recyclerview.widget.RecyclerView
                tools:itemCount="5"
                android:id="@+id/rv"
                tools:listitem="@layout/adapter_movie"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>