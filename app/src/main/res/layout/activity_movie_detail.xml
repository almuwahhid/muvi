<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".app.detail.MovieDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            android:scaleY="1.5"
            android:scaleX="1.5"
            app:lottie_fileName="night.json"
            app:lottie_loop="true" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/appbar"
                layout="@layout/toolbar_base"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_avatar"
                    app:cardCornerRadius="@dimen/radius_default"
                    android:layout_marginTop="@dimen/margin_default"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="@dimen/dimen_160dp"
                    android:layout_height="@dimen/dimen_108dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/rv_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="5"
                            tools:listitem="@layout/adapter_avatar" />
                        <me.relex.circleindicator.CircleIndicator2
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:ci_drawable_unselected="@drawable/ic_indicator_inactive"
                            app:ci_drawable="@drawable/ic_indicator_active"
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_24dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="-48dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_avatar"
                    app:cardElevation="@dimen/dimen_0dp"
                    app:cardCornerRadius="@dimen/dimen_24dp"
                    android:layout_marginBottom="-24dp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_0dp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:background="@drawable/bg_white"
                        android:layout_marginBottom="@dimen/dimen_24dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:padding="@dimen/margin_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardElevation="@dimen/dimen_0dp"
                                app:cardCornerRadius="@dimen/radius_small"
                                app:contentPadding="@dimen/dimen_4dp"
                                app:cardBackgroundColor="@color/colorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_rate"
                                    style="@style/Text.Small.Bold.OneRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_8dp"
                                    android:layout_marginRight="@dimen/dimen_8dp"
                                    android:text="rating : 8.4"
                                    android:textColor="@color/white" />
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:id="@+id/btn_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_love_outline" />
                        </RelativeLayout>
                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:paddingLeft="@dimen/margin_default"
                                android:paddingRight="@dimen/margin_default"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/tv_name"
                                    android:text="Name"
                                    style="@style/Text.Big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_default"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Overview"
                                        style="@style/Text.Normal.Bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_overview"
                                        android:gravity="right"
                                        android:text="Bublb"
                                        style="@style/Text.Normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_default"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="Homepage"
                                        style="@style/Text.Normal.Bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_homepage"
                                        android:gravity="right"
                                        android:text="Bublb"
                                        style="@style/Text.Normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            android:id="@+id/helper"
            layout="@layout/helper" />
    </RelativeLayout>
</layout>
